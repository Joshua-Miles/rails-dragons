<%= form_with(model: dragon, local: true) do |form| %>
<div class="form-group">
<%= form.label :name %>
<%= form.text_field :name, class:'form-control' %>
</div>

<div class="form-group">
<%= form.label :user_id %>
<%= form.select :user_id, User.all.map { |user| [user.name, user.id ] }, class:'form-control' %>
</div>

<div class="form-group">
<%= form.label :ability_id %>
<%= form.select :ability_id, Ability.all.map { |ability| [ability.name, ability.id ] }, class:'form-control' %>
</div>
<br>
<div class="actions">
<%= form.submit %>
</div>
<% end %>
