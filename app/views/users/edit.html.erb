<%= link_to "< Return to User", @user %>

<%= form_with model: @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label "Dragon(s) owned:" %><br>
  <% @user.dragons.each do |dragon| %>
    <%= f.check_box dragon.name %>
    <%= f.label dragon.name %><br>
  <% end %>

  <%= f.submit %>

  <br>

<% end %>
