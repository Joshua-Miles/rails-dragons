<%= link_to "< Return to All Users", users_path %>

<% if @user.errors.any? %>
  <ul>
    <% @user.errors.messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <p>Dragon Info:</p>
  <%= f.fields_for :dragons, @user.dragons.build do |df| %>
    <%= df.label :name %>
    <%= df.text_field :name %><br>
  <% end %>

  <%= f.submit %>

  <br>

<% end %>
