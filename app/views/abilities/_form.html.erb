<%= form_with(model: ability, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :dragon_id %>
    <%= form.select :dragon_id, Dragon.all.map { |dragon| [dragon.name, dragon.id ] }, class:'form-control' %>
  </div>

  <br>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
