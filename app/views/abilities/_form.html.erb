<%= form_with(model: ability, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :dragon_id %>
    <%= form.collection_check_boxes :dragon_ids, Dragon.all, :id, :name, class:'form-control' %>
  </div>

  <br>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
